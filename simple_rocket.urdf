<robot name="simple_rocket">
  <link name="body">
    <visual>
      <geometry>
        <cylinder length="1" radius="0.2"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="1" radius="0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
  <link name="nosecone">
    <visual>
      <geometry>
        <cone radius="0.2" length="0.3"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cone radius="0.2" length="0.3"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <joint name="nosecone_joint" type="fixed">
    <parent link="body"/>
    <child link="nosecone"/>
    <origin xyz="0.5 0 0"/>
  </joint>
</robot>
